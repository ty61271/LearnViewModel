<?xml version="1.0" encoding="utf-8"?>
<com.example.learnviewmodel.views.CreateTodoView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_plus"
            android:layout_width="@dimen/image_icon_default"
            android:layout_height="@dimen/image_icon_default"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imageView"
            android:layout_marginStart="@dimen/item_margin_small"
            android:layout_marginTop="@dimen/item_margin_small"
    />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/todoEditText"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:layout_marginStart="@dimen/item_margin_small"
            android:layout_marginEnd="@dimen/item_margin_small"
            android:hint="@string/hint_add_todo"
    />

</com.example.learnviewmodel.views.CreateTodoView>